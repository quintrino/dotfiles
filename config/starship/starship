format = """\
    $username\
    $hostname\
    $directory\
    $git_branch\
    $git_commit\
    $git_state\
    $git_status\
    $ruby\
    $nix_shell\
    $cmd_duration\
    $line_break\
    $jobs\
    $battery\
    $time\
    $character\
"""

[cmd_duration]
format = "| took [$duration]($style) "

[directory]
format = "| [$path]($style)[$read_only]($read_only_style) "

[git_branch]
format = "| [$symbol$branch]($style) "
style = "bold blue"

[git_commit]
commit_hash_length = 7
disabled = false
format = "[\\($hash\\)]($style)"

[git_status]
disabled = false
diverged = " 😵 "
stashed = " 📦 "
renamed = " 👅 "
conflicted = "⁉ "
ahead = " ⬆ "
behind = " ⬇ "
untracked = "❓"
modified = " ❕"
staged = " ➕"
deleted = " 🗑 "

[hostname]
ssh_only = false
format = "| [$hostname]($style) "

[username]
format = "[$user]($style) "
show_always = true

[ruby]
format = "[$symbol$version]($style) "
symbol = "🔺 Ruby "
style = 'fg:black bg:red'
