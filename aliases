#!/bin/zsh

#iTerm

alias zhist='subl ~/.history/zsh/'

alias cat='echo "You should use bat instead"'
alias term='source $HOME/Google\ Drive/Sync/Mac/iTerm/.profile && source $HOME/Google\ Drive/Sync/Mac/iTerm/.aliases'
alias ali='subl $HOME/.dotfiles/aliases'
alias dot='cd $HOME/.dotfiles'
alias zrc='cd $HOME/.dotfiles && sb && subl zshrc'
alias freq='history 0 | sed -E "s/ *[0-9]+\*? *[0-9 :-]+ *//" | sort | uniq -c | sort -rn | head -50'
alias setup='subl $HOME/Google\ Drive/Sync/Mac/setup'
alias lsa='ls -a'
alias profile='subl $HOME/Google\ Drive/Sync/Mac/iTerm/.profile'
alias pass='eval "$(ssh-agent -s)"; ssh-add $HOME/.ssh/id_rsa; export PATH="/usr/local/opt/openssl/bin:$PATH"'
alias hn='hnote'
alias now='date +"%T"'
alias e='exit'
alias s='subl'
alias sb='subl -a .'
alias ti='ruby $HOME/tick.rb'
alias ls='echo "You should use bat either exa or l instead"'
alias l='exa --long --grid --all --header --git'
alias up='cd ..'

#WDI

alias sin='cd $HOME/Web/code_alongs/sinatra'
alias rub='cd $HOME/Web/code_alongs/ruby'
alias html='cd $HOME/Web/code_alongs/html'
alias javascript='cd $HOME/Web/code_alongs/javascript'
alias encode='ruby $HOME/Web/code_alongs/ruby/cypher/encode.rb'
