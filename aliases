alias broff='kill -9 $(lsof -i tcp:10524 -t)'
alias rt='bundle exec rake test'
alias rr='bundle exec rspec --format documentation'
alias be='bundle exec'
alias bi='bundle install'
alias hl='haml-lint'
alias ud='gp && bundle install && nvm install && npm update -g && rails db:migrate && yarn'

