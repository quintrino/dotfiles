#!/bin/sh

export TERM="xterm-256color"
export CLICOLOR='1'
export EDITOR='code'
export GIT_EDITOR='code --goto --new-window --wait'
export EXA_GRID_ROWS=8
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"
export HEX_HOME="$XDG_CONFIG_HOME/hex"
export AWS_CONFIG_FILE="$XDG_CONFIG_HOME/aws/config"
export AWS_SHARED_CREDENTIALS_FILE="$XDG_CONFIG_HOME/aws/credentials"
export BUNDLE_USER_HOME="$XDG_CONFIG_HOME/bundle"
export ASDF_DATA_DIR="$XDG_DATA_HOME/asdf"
export ASDF_DEFAULT_TOOL_VERSIONS_FILENAME="$XDG_CONFIG_HOME/asdf/.tool-versions"
export ASDF_NPM_DEFAULT_PACKAGES_FILE="$XDG_CONFIG_HOME/asdf/default-packages/nodejs"
export ASDF_GEM_DEFAULT_PACKAGES_FILE="$XDG_CONFIG_HOME/asdf/default-packages/ruby"
export ASDF_CONFIG_FILE="$XDG_CONFIG_HOME/asdf/asdfrc"
export GEMRC="$XDG_CONFIG_HOME/ruby/gemrc"
export GEM_SPEC_CACHE="$XDG_CACHE_HOME/gem"
export SOLARGRAPH_CACHE="$XDG_CACHE_HOME/solargraph"
export _ZO_DATA_DIR="$XDG_DATA_HOME/zoxide"
export FRESH_RCFILE="$HOME/.dotfiles/config/fresh/freshrc"
export FRESH_BIN_PATH="$HOME/Applications/bin"
export FORGIT_NO_ALIASES='1'
export LOLCOMMITS_DIR="$XDG_DATA_HOME/lolcommits"
export LOLCOMMITS_DELAY='1'
export ORGANIZE_CONFIG="$XDG_CONFIG_HOME/organize/config.yaml"
export LESSHISTFILE="$XDG_CACHE_HOME/less/history"
export IRBRC="$XDG_CONFIG_HOME/ruby/irbrc"
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/npmrc"
export ELM_HOME="$XDG_CONFIG_HOME/elm"
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export FRESH_PATH="$XDG_CONFIG_HOME/fresh"
export DOCKER_CONFIG="$XDG_CONFIG_HOME/docker"
export GNUPGHOME="$XDG_DATA_HOME/gnupg"
export PAGER="bat -p"
export MANPAGER="sh -c 'col -bx | bat -plman'"
